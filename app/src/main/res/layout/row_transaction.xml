<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/cardTransaction"
        android:layout_width="360dp"
        android:layout_height="100dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/card_view_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/accountDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/product_sans_regular"
        android:text="6 Sep 2021"
        android:textColor="#BABABA"
        android:textSize="14dp"
        app:layout_constraintStart_toStartOf="@+id/cardTransaction"
        app:layout_constraintTop_toTopOf="@+id/cardTransaction" />

    <TextView
        android:id="@+id/accountHolder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/product_sans_bold"
        android:text="Jackie"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="@+id/accountDate"
        app:layout_constraintTop_toBottomOf="@+id/accountDate" />

    <TextView
        android:id="@+id/accountNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/product_sans_regular"
        android:text="Date"
        android:textSize="14dp"
        app:layout_constraintStart_toStartOf="@+id/accountHolder"
        app:layout_constraintTop_toBottomOf="@+id/accountHolder" />

